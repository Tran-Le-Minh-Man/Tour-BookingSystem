<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Tour Booking</title>
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/footer.css">
    <link rel="stylesheet" href="~/css/HomePage.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar">
            <div class="logo">
                <a href="@Url.Action("Index", "Home")">TourBooking</a>
            </div>
            <ul class="nav-links">
                <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                <li><a href="@Url.Action("TourList", "Home")">Du lịch</a></li>
                @if (ViewData["userId"] != null)
                {
                    <li><a href="@Url.Action("Index", "Booking")">Đặt tour</a></li>
                }
                @if ("ADMIN".Equals(ViewData["role"]?.ToString(), StringComparison.OrdinalIgnoreCase))
                {
                    <li><a href="@Url.Action("Index", "Admin")">Quản trị</a></li>
                }
            </ul>
            <div class="auth-buttons">
                @if (ViewData["userId"] != null)
                {
                    <span class="user-name">Xin chào, @ViewData["fullName"]</span>
                    <a href="@Url.Action("Logout", "Account")" class="btn btn-logout">Đăng xuất</a>
                }
                else
                {
                    <a href="@Url.Action("Login", "Account")" class="btn btn-login">Đăng nhập</a>
                    <a href="@Url.Action("Register", "Account")" class="btn btn-register">Đăng ký</a>
                }
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer>
        <div class="footer-content">
            <div class="footer-section">
                <h3>TourBooking</h3>
                <p>Hệ thống đặt tour du lịch hàng đầu Việt Nam</p>
            </div>
            <div class="footer-section">
                <h3>Liên hệ</h3>
                <p>Email: contact@tourbooking.com</p>
                <p>Điện thoại: 0123 456 789</p>
            </div>
            <div class="footer-section">
                <h3>Link nhanh</h3>
                <p><a href="@Url.Action("Index", "Home")">Trang chủ</a></p>
                <p><a href="@Url.Action("TourList", "Home")">Danh sách tour</a></p>
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; 2024 TourBooking. All rights reserved.</p>
        </div>
    </footer>

    <script src="~/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
