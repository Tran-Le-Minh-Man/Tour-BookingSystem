<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Việt Nam Travel</title>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Pacifico&display=swap" rel="stylesheet">
    
    <!-- Icon -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/footer.css">
    <link rel="stylesheet" href="~/css/site-layout.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)
</head>
<body>
    @{
        var currentUrl = Context.Request.Path;
        var userId = ViewData["userId"];
        var fullName = ViewData["fullName"]?.ToString() ?? "User";
        var role = ViewData["role"]?.ToString();
        var isLoggedIn = userId != null;
        var isAdminArea = currentUrl.Value.StartsWith("/Admin", StringComparison.OrdinalIgnoreCase);
    }
    <header class="navbar sticky-header">
        <div class="container nav-content">
            <div class="nav-brand">
                <a href="@("ADMIN".Equals(role, StringComparison.OrdinalIgnoreCase) ? Url.Action("Index", "Admin") : Url.Action("Index", "Home"))">
                    <span class="logo-accent">Việt Nam</span> Travel
                </a>
            </div>
            <nav class="nav-menu">
                <ul>
                    @if (!isAdminArea && !"ADMIN".Equals(role, StringComparison.OrdinalIgnoreCase))
                    {
                        <li>
                            <a href="@Url.Action("Index", "Home")" class="@(currentUrl.Value == "/" || currentUrl.Value == "/Home" || currentUrl.Value == "/Home/Index" ? "active" : "")">
                                Trang chủ
                            </a>
                        </li>
                        <li>
                            <a href="@Url.Action("TourList", "Home")" class="@(currentUrl.Value.Contains("TourList") ? "active" : "")">
                                Tour du lịch
                            </a>
                        </li>
                    }
                    @if (isLoggedIn)
                    {
                        @if ("USER".Equals(role, StringComparison.OrdinalIgnoreCase))
                        {
                            <li>
                                <a href="@Url.Action("Index", "Favorites")" class="@(currentUrl.Value.Contains("Favorites") ? "active" : "")">
                                    <i class="far fa-heart"></i> Yêu thích
                                </a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index", "Booking")" class="@(currentUrl.Value.Contains("Booking") ? "active" : "")">
                                    <i class="fas fa-shopping-bag"></i> Đơn hàng
                                </a>
                            </li>
                        }
                        
                        @if ("ADMIN".Equals(role, StringComparison.OrdinalIgnoreCase) && !isAdminArea)
                        {
                            <li>
                                <a href="@Url.Action("Index", "Admin")" class="btn-admin-portal">
                                    <i class="fas fa-user-shield"></i> Trang Quản Trị
                                </a>
                            </li>
                        }

                        <li class="dropdown user-dropdown">
                            <a href="#" class="dropdown-toggle user-toggle">
                                <div class="user-avatar-small">@fullName.Substring(0, 1).ToUpper()</div>
                                <span>Cài đặt</span> <i class="fas fa-chevron-down"></i>
                            </a>
                            <div class="dropdown-menu">
                                <div class="dropdown-header">
                                    <strong>@fullName</strong>
                                    <span>@role</span>
                                </div>
                                <div class="dropdown-divider"></div>
                                <a href="@Url.Action("EditProfile", "Account")">
                                    <i class="fas fa-user-edit"></i> Hồ sơ của tôi
                                </a>
                                <a href="@Url.Action("Logout", "Account")" class="logout-link">
                                    <i class="fas fa-sign-out-alt"></i> Đăng xuất
                                </a>
                            </div>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a href="@Url.Action("Login", "Account")" class="nav-login">Đăng nhập</a>
                        </li>
                        <li>
                            <a href="@Url.Action("Register", "Account")" class="btn-register-premium">Đăng ký ngay</a>
                        </li>
                    }
                </ul>
            </nav>
            <div class="nav-toggle">
                <span></span> <span></span> <span></span>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    @if (!isAdminArea)
    {
        <footer class="main-footer">
            <div class="container footer-grid">
                <div class="footer-brand">
                    <a href="#" class="footer-logo"><span class="logo-accent">Việt Nam</span> Travel</a>
                    <p>Khám phá vẻ đẹp bất tận của dải đất hình chữ S cùng chúng tôi.</p>
                    <div class="social-links">
                        <a href="#"><i class="fab fa-facebook-f"></i></a>
                        <a href="#"><i class="fab fa-instagram"></i></a>
                        <a href="#"><i class="fab fa-youtube"></i></a>
                    </div>
                </div>
                <div class="footer-links">
                    <h4>Liên kết</h4>
                    <ul>
                        <li><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
                        <li><a href="@Url.Action("TourList", "Home")">Tour du lịch</a></li>
                        <li><a href="#">Về chúng tôi</a></li>
                    </ul>
                </div>
                <div class="footer-contact">
                    <h4>Liên hệ</h4>
                    <p><i class="fas fa-phone"></i> 1900 1234</p>
                    <p><i class="fas fa-envelope"></i> contact@vntravel.com</p>
                    <p><i class="fas fa-map-marker-alt"></i> Hà Nội, Việt Nam</p>
                </div>
            </div>
            <div class="footer-bottom">
                <div class="container">
                    <p>&copy; 2025 Việt Nam Travel - Đồ án lập trình web</p>
                </div>
            </div>
        </footer>
    }

    <!-- Global Modal Implementation -->
    <div id="userModalOverlay" class="user-modal-overlay">
        <div class="user-modal">
            <div class="user-modal-header">
                <h3 id="userModalTitle">Thông báo</h3>
                <button class="user-modal-close" onclick="closeUserModal()">&times;</button>
            </div>
            <div class="user-modal-body">
                <p id="userModalMessage">...</p>
            </div>
            <div class="user-modal-footer">
                <button id="userModalCancel" class="btn-modal-secondary" onclick="closeUserModal()">Hủy</button>
                <button id="userModalConfirm" class="btn-modal-primary">Xác nhận</button>
            </div>
        </div>
    </div>

    <style>
     
    </style>

    <script>
        document.querySelector('.nav-toggle').addEventListener('click', function() {
            document.querySelector('.nav-menu').classList.toggle('active');
        });

        function showUserAlert(title, message) {
            const overlay = document.getElementById('userModalOverlay');
            document.getElementById('userModalTitle').innerText = title;
            document.getElementById('userModalMessage').innerText = message;
            document.getElementById('userModalCancel').style.display = 'none';
            document.getElementById('userModalConfirm').onclick = closeUserModal;
            document.getElementById('userModalConfirm').innerText = 'Đóng';
            overlay.classList.add('active');
        }

        function showUserConfirm(title, message, onConfirm) {
            const overlay = document.getElementById('userModalOverlay');
            document.getElementById('userModalTitle').innerText = title;
            document.getElementById('userModalMessage').innerText = message;
            document.getElementById('userModalCancel').style.display = 'inline-block';
            document.getElementById('userModalConfirm').innerText = 'Tiếp tục';
            document.getElementById('userModalConfirm').onclick = function() {
                closeUserModal();
                if (onConfirm) onConfirm();
            };
            overlay.classList.add('active');
        }

        function closeUserModal() {
            document.getElementById('userModalOverlay').classList.remove('active');
        }
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>