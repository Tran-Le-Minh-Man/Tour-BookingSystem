@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var currentUrl = Context.Request.Path;
}

<div class="admin-wrapper">
    <aside class="admin-sidebar">
        <div class="sidebar-header">
            <i class="fas fa-user-shield"></i>
            <span>Bảng điều khiển</span>
        </div>
        <nav class="sidebar-nav">
            <a href="@Url.Action("Index", "Admin")" class="@(currentUrl.Value == "/Admin" || currentUrl.Value == "/Admin/Index" ? "active" : "")">
                <i class="fas fa-chart-line"></i> Tổng quan
            </a>
            <a href="@Url.Action("Users", "Admin")" class="@(currentUrl.Value.Contains("Users") ? "active" : "")">
                <i class="fas fa-users"></i> Người dùng
            </a>
            <a href="@Url.Action("Tours", "Admin")" class="@(currentUrl.Value.Contains("Tours") ? "active" : "")">
                <i class="fas fa-map-marked-alt"></i> Quản lý Tour
            </a>
            <a href="@Url.Action("Bookings", "Admin")" class="@(currentUrl.Value.Contains("Bookings") ? "active" : "")">
                <i class="fas fa-calendar-check"></i> Đặt tour
            </a>
        </nav>
    </aside>

    <main class="admin-main-content">
        <div class="admin-container">
            @RenderBody()
        </div>
    </main>

    <!-- Custom Admin Modal -->
    <div id="adminModalOverlay" class="admin-modal-overlay">
        <div class="admin-modal">
            <div class="admin-modal-header">
                <h3 id="adminModalTitle">Thông báo</h3>
                <button class="admin-modal-close" onclick="closeAdminModal()">&times;</button>
            </div>
            <div class="admin-modal-body">
                <p id="adminModalMessage">Nội dung thông báo...</p>
            </div>
            <div class="admin-modal-footer">
                <button id="adminModalCancel" class="btn-modal-secondary" onclick="closeAdminModal()">Hủy</button>
                <button id="adminModalConfirm" class="btn-modal-primary">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --admin-primary: #4361ee;
        --admin-secondary: #3f37c9;
        --admin-success: #4cc9f0;
        --admin-bg: #f8f9fc;
        --sidebar-width: 260px;
        --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    body {
        background-color: var(--admin-bg);
    }

    .admin-wrapper {
        display: flex;
        min-height: calc(100vh - 140px); /* Adjust based on your header/footer height */
    }

    /* Sidebar Styling */
    .admin-sidebar {
        width: var(--sidebar-width);
        background: #fff;
        border-right: 1px solid #e3e6f0;
        display: flex;
        flex-direction: column;
        transition: var(--transition);
        position: sticky;
        top: 0;
        height: min-content;
    }

    .sidebar-header {
        padding: 2rem 1.5rem;
        display: flex;
        align-items: center;
        gap: 12px;
        font-size: 1.25rem;
        font-weight: 700;
        color: var(--admin-primary);
        border-bottom: 1px solid #f0f1f5;
    }

    .sidebar-nav {
        padding: 1rem 0;
        flex-grow: 1;
    }

    .sidebar-nav a {
        display: flex;
        align-items: center;
        gap: 12px;
        padding: 0.8rem 1.5rem;
        color: #4e73df;
        text-decoration: none;
        font-weight: 600;
        transition: var(--transition);
        margin: 4px 12px;
        border-radius: 8px;
    }

    .sidebar-nav a:hover {
        background: #f8f9fc;
        color: var(--admin-secondary);
    }

    .sidebar-nav a.active {
        background: var(--admin-primary);
        color: #fff;
        box-shadow: 0 4px 12px rgba(67, 97, 238, 0.3);
    }

    .sidebar-nav a i {
        width: 20px;
        text-align: center;
    }

    .sidebar-footer {
        padding: 1.5rem;
        border-top: 1px solid #f0f1f5;
    }

    .sidebar-footer a {
        display: flex;
        align-items: center;
        gap: 8px;
        color: #858796;
        text-decoration: none;
        font-size: 0.9rem;
        font-weight: 500;
        transition: var(--transition);
    }

    .sidebar-footer a:hover {
        color: var(--admin-primary);
    }

    /* Content Area */
    .admin-main-content {
        flex-grow: 1;
        padding: 2rem;
        background: var(--admin-bg);
    }

    .admin-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Page Header in Admin */
    .admin-page-title {
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .admin-page-title h1 {
        font-size: 1.75rem;
        font-weight: 700;
        color: #2c3e50;
        margin: 0;
    }

    /* Card Styling */
    .admin-card {
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        padding: 1.5rem;
        margin-bottom: 2rem;
        border: none;
    }

    /* Table Styling */
    .premium-table {
        width: 100%;
        border-collapse: separate;
        border-spacing: 0;
    }

    .premium-table th {
        background: #f8f9fc;
        color: #4e73df;
        font-weight: 700;
        text-transform: uppercase;
        font-size: 0.8rem;
        padding: 1rem;
        border-bottom: 2px solid #e3e6f0;
    }

    .premium-table td {
        padding: 1rem;
        vertical-align: middle;
        border-bottom: 1px solid #e3e6f0;
        color: #5a5c69;
    }

    .premium-table tr:hover {
        background-color: #f8f9fc;
    }

    /* Custom Modal Styles */
    .admin-modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.5);
        backdrop-filter: blur(4px);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 10000;
        opacity: 0;
        transition: opacity 0.3s ease;
    }

    .admin-modal-overlay.active {
        display: flex;
        opacity: 1;
    }

    .admin-modal {
        background: white;
        width: 90%;
        max-width: 400px;
        border-radius: 12px;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        transform: scale(0.9);
        transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
        overflow: hidden;
    }

    .admin-modal-overlay.active .admin-modal {
        transform: scale(1);
    }

    .admin-modal-header {
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #edf2f7;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .admin-modal-header h3 {
        margin: 0;
        font-size: 1.1rem;
        color: #1a202c;
        font-weight: 700;
    }

    .admin-modal-close {
        background: none;
        border: none;
        font-size: 1.5rem;
        color: #a0aec0;
        cursor: pointer;
        transition: color 0.2s;
    }

    .admin-modal-body {
        padding: 1.5rem;
        color: #4a5568;
        font-size: 0.95rem;
        line-height: 1.5;
        text-align: center;
    }

    .admin-modal-footer {
        padding: 1rem 1.5rem;
        background: #f8fafc;
        display: flex;
        justify-content: center;
        gap: 12px;
    }

    .btn-modal-primary, .btn-modal-secondary {
        padding: 0.5rem 1.5rem;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.2s;
        border: none;
        font-size: 0.9rem;
    }

    .btn-modal-primary {
        background: var(--admin-primary);
        color: white;
    }

    .btn-modal-primary:hover {
        background: var(--admin-secondary);
    }

    .btn-modal-secondary {
        background: #edf2f7;
        color: #4a5568;
    }
</style>

@RenderSection("Styles", required: false)
@RenderSection("Scripts", required: false)

<script>
    function showAdminAlert(title, message) {
        const overlay = document.getElementById('adminModalOverlay');
        document.getElementById('adminModalTitle').innerText = title;
        document.getElementById('adminModalMessage').innerText = message;
        document.getElementById('adminModalCancel').style.display = 'none';
        
        const confirmBtn = document.getElementById('adminModalConfirm');
        confirmBtn.innerText = 'Đóng';
        confirmBtn.className = 'btn-modal-primary';
        confirmBtn.onclick = closeAdminModal;
        
        overlay.classList.add('active');
    }

    function showAdminConfirm(title, message, onConfirm) {
        const overlay = document.getElementById('adminModalOverlay');
        document.getElementById('adminModalTitle').innerText = title;
        document.getElementById('adminModalMessage').innerText = message;
        document.getElementById('adminModalCancel').style.display = 'inline-block';
        
        const confirmBtn = document.getElementById('adminModalConfirm');
        confirmBtn.innerText = 'Xác nhận';
        confirmBtn.className = 'btn-modal-primary';
        confirmBtn.onclick = function() {
            closeAdminModal();
            if (onConfirm) onConfirm();
        };
        
        overlay.classList.add('active');
    }

    function closeAdminModal() {
        document.getElementById('adminModalOverlay').classList.remove('active');
    }
</script>
