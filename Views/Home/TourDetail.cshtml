@model TourBookingSystem.Models.Tour
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = Model?.getName() ?? "Chi tiết tour";
    var relatedTours = ViewData["relatedTours"] as List<TourBookingSystem.Models.Tour>;
    bool isFavorite = (bool)(ViewData["isFavorite"] ?? false);
    int? userId = ViewData["userId"] as int?;
}
@section Styles {
    <link rel="stylesheet" href="~/css/tour_detail.css" />
}
<div class="tour-detail-banner">
    <div class="container">
        <h1>@Model.getName()</h1>
        <div class="banner-meta">
            <span><i class="fas fa-map-marker-alt"></i> @Model.getDestination()</span>
            <span><i class="far fa-clock"></i> @Model.getDuration() ngày</span>
            @{
                var statusText = (Model.getStatus() ?? "ACTIVE").ToUpper() == "ACTIVE" ? "Hoạt động" : "Ẩn";
                var statusClass = (Model.getStatus() ?? "ACTIVE").ToUpper() == "ACTIVE" ? "active" : "inactive";
            }
            <span class="badge-status @statusClass">@statusText</span>
        </div>
    </div>
</div>

<div class="container detail-grid">
    <div class="detail-content">
        <div class="main-image-box">
            <img src="@Model.getSafeImageUrl()" alt="@Model.getName()" onerror="this.src='/images/danang.jpg'">
        </div>

        <div class="info-section">
            <h2 class="section-title">Chương trình hành trình</h2>
            <div class="description-text">
                @Html.Raw(Model.getDescription().Replace("\n", "<br>"))
            </div>
        </div>

        <div class="info-section">
            <h2 class="section-title">Thông tin chi tiết</h2>
            <div class="specs-grid">
                <div class="spec-item">
                    <div class="spec-label">Ngày khởi hành</div>
                    <div class="spec-val">@Model.getFormattedDepartureDate()</div>
                </div>
                <div class="spec-item">
                    <div class="spec-label">Thời gian</div>
                    <div class="spec-val">@Model.getDuration() ngày</div>
                </div>
                <div class="spec-item">
                    <div class="spec-label">Sức chứa</div>
                    <div class="spec-val">@Model.getMaxParticipants() khách</div>
                </div>
                <div class="spec-item">
                    <div class="spec-label">Số chỗ còn lại</div>
                    <div class="spec-val">@Model.getAvailableSlots() khách</div>
                </div>
            </div>
        </div>

        @if (relatedTours != null && relatedTours.Count > 0)
        {
            <div class="info-section">
                <h2 class="section-title">Hành trình tương tự</h2>
                <div class="related-list">
                    @foreach (var tour in relatedTours)
                    {
                        <a href="@Url.Action("TourDetail", "Home", new { id = tour.getTourId() })" class="related-mini-card">
                            <img src="@tour.getSafeImageUrl()" alt="@tour.getName()" onerror="this.src='/images/phuquoc.jpg'">
                            <div class="related-mini-info">
                                <h4>@tour.getName()</h4>
                                <div class="related-mini-price">@tour.getFormattedPrice()</div>
                            </div>
                        </a>
                    }
                </div>
            </div>
        }
    </div>

    <aside class="detail-sidebar">
        <div class="booking-sidebar-card">
            <div class="price-box">
                <span class="price-label">Giá trọn gói:</span>
                <div class="price-value">@Model.getFormattedPrice()</div>
            </div>

            <div class="booking-form">
                <div class="form-item">
                    <label>Số người tham gia</label>
                    <input type="number" id="booking-qty" value="1" min="1" max="@Model.getAvailableSlots()">
                </div>
                <div class="form-item">
                    <label>Yêu cầu đi kèm</label>
                    <textarea id="booking-notes" placeholder="Nhập ghi chú của bạn..."></textarea>
                </div>
                
                <div class="summary-box">
                    <span>Tổng tiền dự kiến:</span>
                    <strong id="final-total">@Model.getFormattedPrice()</strong>
                </div>

                <button class="btn-action-primary" onclick="bookTour(@Model.getTourId())">
                    Đặt tour ngay
                </button>

                <button class="btn-action-secondary @(isFavorite ? "active" : "")" onclick="toggleFavorite(@Model.getTourId())">
                    <i class="@(isFavorite ? "fas" : "far") fa-heart"></i>
                    <span>@(isFavorite ? "Đã lưu yêu thích" : "Thêm vào yêu thích")</span>
                </button>
            </div>

            <div class="sidebar-info">
                <p><i class="fas fa-check"></i> Giá đã bao gồm thuế & phí</p>
                <p><i class="fas fa-check"></i> Hỗ trợ đổi trả linh hoạt</p>
            </div>
        </div>
    </aside>
</div>

<style>
  
</style>

<script>
    const price = @Model.getPrice();
    const qtyInput = document.getElementById('booking-qty');
    const totalDisplay = document.getElementById('final-total');

    qtyInput.addEventListener('input', () => {
        const qty = parseInt(qtyInput.value) || 1;
        const total = price * qty;
        totalDisplay.innerText = new Intl.NumberFormat('vi-VN').format(total) + 'đ';
    });

    function bookTour(tourId) {
        const qty = qtyInput.value;
        const notes = document.getElementById('booking-notes').value;

        showUserConfirm('Xác nhận đặt tour', `Bạn muốn đặt tour này cho ${qty} khách?`, function() {
            fetch('@Url.Action("Index", "Booking")', {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: `action=create&tourId=${tourId}&quantity=${qty}&notes=${encodeURIComponent(notes)}`
            })
            .then(response => response.json())
            .then(data => {
                showUserAlert(data.status === 'success' ? 'Thành công' : 'Lỗi', data.message);
                if (data.status === 'success') {
                    setTimeout(() => location.href = '@Url.Action("Index", "Booking")', 1500);
                }
            });
        });
    }

    function toggleFavorite(tourId) {
        fetch('@Url.Action("Toggle", "Favorites")', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: 'tourId=' + tourId
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                const btn = document.querySelector('.btn-action-secondary');
                const icon = btn.querySelector('i');
                const span = btn.querySelector('span');
                
                if (data.isFavorite) {
                    btn.classList.add('active');
                    icon.className = 'fas fa-heart';
                    span.innerText = 'Đã lưu yêu thích';
                } else {
                    btn.classList.remove('active');
                    icon.className = 'far fa-heart';
                    span.innerText = 'Thêm vào yêu thích';
                }
            } else {
                showUserAlert('Thông báo', data.message);
            }
        });
    }
</script>
