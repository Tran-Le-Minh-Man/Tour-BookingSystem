@model TourBookingSystem.Models.User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Chỉnh sửa thông tin";
}

<div class="profile-container">
    <div class="profile-header">
        <h1><i class="fas fa-user-circle"></i> Hồ sơ của tôi</h1>
        <p>Quản lý thông tin cá nhân và mật khẩu của bạn</p>
    </div>

    @if (TempData["success"] != null)
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> @TempData["success"]
        </div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle"></i> @Html.Raw(TempData["error"])
        </div>
    }

    <div class="profile-grid">
        <div class="profile-card">
            <h3><i class="fas fa-id-card"></i> Thông tin cá nhân</h3>
            <form action="@Url.Action("UpdateProfile", "Account")" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" value="@Model.getEmail()" disabled class="form-control disabled">
                    <small>Email không thể thay đổi</small>
                </div>
                <div class="form-group">
                    <label>Họ và tên</label>
                    <input type="text" name="fullName" value="@Model.getFullName()" required class="form-control">
                </div>
                <div class="form-group">
                    <label>Số điện thoại</label>
                    <input type="text" name="phone" value="@Model.getPhone()" class="form-control">
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-indigo">Lưu thay đổi</button>
                </div>
            </form>
        </div>

        <div class="profile-card">
            <h3><i class="fas fa-key"></i> Đổi mật khẩu</h3>
            <form action="@Url.Action("ChangePassword", "Account")" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Mật khẩu hiện tại</label>
                    <input type="password" name="oldPassword" required class="form-control">
                </div>
                <div class="form-group">
                    <label>Mật khẩu mới</label>
                    <input type="password" name="newPassword" required class="form-control" minlength="8">
                </div>
                <div class="form-group">
                    <label>Xác nhận mật khẩu mới</label>
                    <input type="password" name="confirmPassword" required class="form-control">
                </div>
                <div class="form-actions">
                    <button type="submit" class="btn btn-indigo">Cập nhật mật khẩu</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .profile-container {
        max-width: 1000px;
        margin: 40px auto;
        padding: 0 20px;
    }

    .profile-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .profile-header h1 {
        color: #4361ee;
        font-weight: 700;
        margin-bottom: 10px;
    }

    .profile-header p {
        color: #64748b;
    }

    .profile-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 30px;
    }

    @@media (max-width: 768px) {
        .profile-grid {
            grid-template-columns: 1fr;
        }
    }

    .profile-card {
        background: white;
        padding: 30px;
        border-radius: 16px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.05);
    }

    .profile-card h3 {
        color: #1e293b;
        margin-bottom: 25px;
        font-size: 1.25rem;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-group label {
        display: block;
        margin-bottom: 8px;
        font-weight: 600;
        color: #475569;
        font-size: 0.9rem;
    }

    .form-control {
        width: 100%;
        padding: 12px 16px;
        border: 1px solid #e2e8f0;
        border-radius: 8px;
        outline: none;
        transition: all 0.2s;
        font-size: 1rem;
    }

    .form-control:focus {
        border-color: #4361ee;
        box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
    }

    .form-control.disabled {
        background: #f8fafc;
        color: #94a3b8;
        cursor: not-allowed;
    }

    .form-group small {
        color: #94a3b8;
        font-size: 0.8rem;
    }

    .btn-indigo {
        background: #4361ee;
        color: white;
        border: none;
        padding: 12px 24px;
        border-radius: 8px;
        font-weight: 600;
        cursor: pointer;
        width: 100%;
        transition: background 0.2s;
    }

    .btn-indigo:hover {
        background: #3730a3;
    }

    .alert {
        padding: 15px 20px;
        border-radius: 12px;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .alert-success {
        background: #dcfce7;
        color: #166534;
    }

    .alert-danger {
        background: #fee2e2;
        color: #991b1b;
    }
</style>
