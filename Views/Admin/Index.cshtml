@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Quản trị";
    var totalUsers = ViewData["totalUsers"] ?? 0;
    var totalTours = ViewData["totalTours"] ?? 0;
    var totalBookings = ViewData["totalBookings"] ?? 0;
    var totalRevenue = ViewData["totalRevenue"] ?? 0m;
    var recentBookings = ViewData["recentBookings"] as List<TourBookingSystem.Models.Booking>;
    var adminCount = ViewData["adminCount"] ?? 0;
    var userCount = ViewData["userCount"] ?? 0;
}

<div class="admin-page">
    <div class="page-header">
        <h1>Quản trị hệ thống</h1>
        <div class="admin-nav">
            <a href="@Url.Action("Index", "Admin")" class="active">Tổng quan</a>
            <a href="@Url.Action("Users", "Admin")">Người dùng</a>
            <a href="@Url.Action("Tours", "Admin")">Tour</a>
            <a href="@Url.Action("Bookings", "Admin")">Đặt tour</a>
        </div>
    </div>
    
    <!-- Dashboard Stats -->
    <div class="stats-grid">
        <div class="stat-card">
            <h3>Tổng người dùng</h3>
            <p class="stat-value">@totalUsers</p>
            <p class="stat-detail">Admin: @adminCount | User: @userCount</p>
        </div>
        <div class="stat-card">
            <h3>Tổng tour</h3>
            <p class="stat-value">@totalTours</p>
        </div>
        <div class="stat-card">
            <h3>Tổng đơn đặt</h3>
            <p class="stat-value">@totalBookings</p>
        </div>
        <div class="stat-card">
            <h3>Doanh thu</h3>
            <p class="stat-value">@String.Format("{0:N0}đ", totalRevenue)</p>
        </div>
    </div>
    
    <!-- Recent Bookings -->
    <div class="recent-section">
        <h2>Đơn đặt gần đây</h2>
        @if (recentBookings != null && recentBookings.Count > 0)
        {
            <table class="admin-table">
                <thead>
                    <tr>
                        <th>Mã</th>
                        <th>Khách hàng</th>
                        <th>Tour</th>
                        <th>Ngày đặt</th>
                        <th>Trạng thái</th>
                        <th>Tổng tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in recentBookings)
                    {
                        <tr>
                            <td>#@booking.getBookingId()</td>
                            <td>@booking.getUserName()</td>
                            <td>@booking.getTourName()</td>
                            <td>@booking.getFormattedDate()</td>
                            <td><span class="status-badge @booking.getStatus().ToLower()">@booking.getFormattedStatus()</span></td>
                            <td>@booking.getFormattedPrice()</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>Chưa có đơn đặt nào</p>
        }
    </div>
</div>

<style>
    .admin-nav {
        display: flex;
        gap: 10px;
        margin-top: 15px;
    }
    
    .admin-nav a {
        padding: 8px 16px;
        background: #f0f0f0;
        text-decoration: none;
        color: #333;
        border-radius: 5px;
    }
    
    .admin-nav a.active {
        background: #007bff;
        color: white;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        margin: 20px 0;
    }
    
    .stat-card {
        background: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        text-align: center;
    }
    
    .stat-card h3 {
        margin: 0 0 10px 0;
        font-size: 14px;
        color: #666;
    }
    
    .stat-value {
        font-size: 28px;
        font-weight: bold;
        color: #007bff;
        margin: 0;
    }
    
    .stat-detail {
        font-size: 12px;
        color: #999;
        margin-top: 5px;
    }
    
    .admin-table {
        width: 100%;
        border-collapse: collapse;
    }
    
    .admin-table th, .admin-table td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #eee;
    }
    
    .admin-table th {
        background: #f8f9fa;
        font-weight: 600;
    }
    
    .status-badge {
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 12px;
    }
    
    .status-badge.pending {
        background: #fff3cd;
        color: #856404;
    }
    
    .status-badge.confirmed {
        background: #d4edda;
        color: #155724;
    }
    
    .status-badge.cancelled {
        background: #f8d7da;
        color: #721c24;
    }
</style>
