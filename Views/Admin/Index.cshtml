@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Tổng quan quản trị";
    var totalUsers = ViewData["totalUsers"] ?? 0;
    var totalTours = ViewData["totalTours"] ?? 0;
    var totalBookings = ViewData["totalBookings"] ?? 0;
    var totalRevenue = ViewData["totalRevenue"] ?? 0m;
    var recentBookings = ViewData["recentBookings"] as List<TourBookingSystem.Models.Booking>;
    var adminCount = ViewData["adminCount"] ?? 0;
    var userCount = ViewData["userCount"] ?? 0;
}

<div class="admin-page-title">
    <h1><i class="fas fa-tachometer-alt"></i> Tổng quan hệ thống</h1>
</div>

<!-- Dashboard Stats -->
<div class="stats-grid">
    <div class="stat-card border-left-primary">
        <div class="stat-content">
            <div class="stat-label">Tổng người dùng</div>
            <div class="stat-value">@totalUsers</div>
            <div class="stat-subtext">Admin: @adminCount | User: @userCount</div>
        </div>
        <div class="stat-icon">
            <i class="fas fa-users fa-2x text-gray-300"></i>
        </div>
    </div>
    
    <div class="stat-card border-left-success">
        <div class="stat-content">
            <div class="stat-label">Tổng tour</div>
            <div class="stat-value">@totalTours</div>
        </div>
        <div class="stat-icon">
            <i class="fas fa-map-marked-alt fa-2x text-gray-300"></i>
        </div>
    </div>

    <div class="stat-card border-left-info">
        <div class="stat-content">
            <div class="stat-label">Tổng đơn đặt</div>
            <div class="stat-value">@totalBookings</div>
        </div>
        <div class="stat-icon">
            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
        </div>
    </div>

    <div class="stat-card border-left-warning">
        <div class="stat-content">
            <div class="stat-label">Doanh thu</div>
            <div class="stat-value">@String.Format("{0:N0}đ", totalRevenue)</div>
        </div>
        <div class="stat-icon">
            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
        </div>
    </div>
</div>

<!-- Recent Bookings -->
<div class="admin-card">
    <div class="card-header-flex">
        <h2 class="card-title"><i class="fas fa-history"></i> Đơn đặt gần đây</h2>
        <a href="@Url.Action("Bookings", "Admin")" class="btn-text">Xem tất cả</a>
    </div>
    
    @if (recentBookings != null && recentBookings.Count > 0)
    {
        <div class="table-responsive">
            <table class="premium-table">
                <thead>
                    <tr>
                        <th class="text-center">Mã</th>
                        <th>Khách hàng</th>
                        <th>Tour</th>
                        <th class="text-center">Ngày đặt</th>
                        <th class="text-center">Trạng thái</th>
                        <th class="text-center">Tổng tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var booking in recentBookings)
                    {
                        <tr>
                            <td class="text-center" style="text-align: center !important;"><strong>#@booking.getBookingId()</strong></td>
                            <td>@booking.getUserName()</td>
                            <td>@booking.getTourName()</td>
                            <td class="text-center" style="text-align: center !important;">@booking.getFormattedDate()</td>
                            <td class="text-center" style="text-align: center !important;">
                                @{
                                    var currentStatus = (booking.getStatus()?.Trim() ?? "PENDING").ToUpper();
                                    var statusLabel = booking.getFormattedStatus();
                                    var statusColor = "#4e73df"; // Default blue
                                    
                                    if (currentStatus == "CONFIRMED") statusColor = "#166534"; // Green
                                    else if (currentStatus == "CANCELLED") statusColor = "#991b1b"; // Red
                                    else if (currentStatus == "PENDING") statusColor = "#856404"; // Yellow
                                    else if (currentStatus == "COMPLETED") statusColor = "#0c5460"; // Teal
                                }
                                <strong style="color: @statusColor; display: block;">@statusLabel</strong>
                            </td>
                            <td class="text-center text-primary font-weight-bold" style="text-align: center !important;">@booking.getFormattedPrice()</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="empty-state">
            <i class="fas fa-folder-open"></i>
            <p>Chưa có đơn đặt nào</p>
        </div>
    }
</div>

<style>
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .stat-card {
        background: #fff;
        border-radius: 10px;
        padding: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.1);
        border: 1px solid #e3e6f0;
    }

    .border-left-primary { border-left: 0.25rem solid #4e73df !important; }
    .border-left-success { border-left: 0.25rem solid #1cc88a !important; }
    .border-left-info { border-left: 0.25rem solid #36b9cc !important; }
    .border-left-warning { border-left: 0.25rem solid #f6c23e !important; }

    .stat-label {
        font-size: 0.7rem;
        font-weight: 700;
        text-transform: uppercase;
        color: #4e73df;
        margin-bottom: 0.25rem;
    }

    .stat-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: #5a5c69;
    }

    .stat-subtext {
        font-size: 0.75rem;
        color: #858796;
    }

    .stat-icon i {
        color: #dddfeb;
    }

    .card-header-flex {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 1.5rem;
        border-bottom: 1px solid #f0f1f5;
        padding-bottom: 1rem;
    }

    .card-title {
        font-size: 1.1rem;
        font-weight: 700;
        color: #4e73df;
        margin: 0;
    }

    .btn-text {
        font-size: 0.85rem;
        color: #4e73df;
        text-decoration: none;
        font-weight: 600;
    }

    .btn-text:hover {
        text-decoration: underline;
    }

    .badge {
        padding: 0.4rem 0.8rem;
        border-radius: 50px;
        font-size: 0.75rem;
        font-weight: 700;
        display: inline-block;
    }

    .badge-pending { background: #ffeeba; color: #856404; }
    .badge-confirmed { background: #d4edda; color: #155724; }
    .badge-cancelled { background: #f8d7da; color: #721c24; }
    .badge-completed { background: #cce5ff; color: #004085; }

    .empty-state {
        text-align: center;
        padding: 3rem;
        color: #858796;
    }

    .empty-state i {
        font-size: 3rem;
        margin-bottom: 1rem;
        opacity: 0.3;
    }

    .table-responsive {
        overflow-x: auto;
    }

    .text-center { text-align: center; }
    .text-primary { color: #4e73df !important; }
    .font-weight-bold { font-weight: 700 !important; }
</style>
